{
    "manifest_version": 3,
    "name": "Right Click Unblocker",
    "version": "1.0.1",
    "description": "Unblocks right-click, text selection, copy, and context menu on pages that try to disable them.",
    "permissions": ["storage"],
    "icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "action": {
      "default_title": "Right Click Unblocker",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ]
  }
  